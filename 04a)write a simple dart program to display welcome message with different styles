import 'package:flutter/material.dart';

void main() {
  runApp(const WelcomeApp());
}

class WelcomeApp extends StatelessWidget {
  const WelcomeApp({super.key});

  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      debugShowCheckedModeBanner: false,
      home: Scaffold(
        appBar: AppBar(
          title: const Text("Welcome Styles"),
          backgroundColor: Colors.teal,
          foregroundColor: Colors.white,
        ),
        body: Center(
          child: Column(
            mainAxisAlignment: MainAxisAlignment.center,
            children: [
              // Style 1: Simple and Clean
              const Text(
                "Welcome!",
                style: TextStyle(
                  fontSize: 24,
                  color: Colors.black,
                ),
              ),
              
              const SizedBox(height: 20), // Spacing

              // Style 2: Bold and Blue
              const Text(
                "Welcome!",
                style: TextStyle(
                  fontSize: 35,
                  fontWeight: FontWeight.bold,
                  color: Colors.blueAccent,
                ),
              ),

              const SizedBox(height: 20),

              // Style 3: Italic with Letter Spacing
              const Text(
                "Welcome!",
                style: TextStyle(
                  fontSize: 28,
                  fontStyle: FontStyle.italic,
                  letterSpacing: 5, // Adds space between letters
                  color: Colors.purple,
                ),
              ),

              const SizedBox(height: 20),

              // Style 4: Monospace (Coding style) with Background
              Text(
                " Welcome! ",
                style: TextStyle(
                  fontSize: 30,
                  fontFamily: 'Courier', // Monospace font
                  backgroundColor: Colors.grey[300],
                  color: Colors.red[800],
                ),
              ),

              const SizedBox(height: 20),

              // Style 5: With Shadow (3D effect)
              Text(
                "Welcome!",
                style: TextStyle(
                  fontSize: 40,
                  fontWeight: FontWeight.w900,
                  color: Colors.orange,
                  shadows: [
                    BoxShadow(
                      color: Colors.black.withOpacity(0.3),
                      offset: const Offset(4, 4),
                      blurRadius: 5,
                    ),
                  ],
                ),
              ),
            ],
          ),
        ),
      ),
    );
  }
}
